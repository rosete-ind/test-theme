<header>
  <div class='navbar'>
    <div>
      <h1>{{ shop.name }}</h1>
    </div>
  <div class='nav-link-container'>
    {%-  for link in linklists.main-menu.links -%}
      <div class='nav-links'>
      {{ link.title | link_to: link.url }}
      </div>
      {%- endfor -%}
  </div>
  </div>

</header>

<style>
  .navbar{
    overflow: hidden;
  }
  .nav-link-container{
    margin-right: !important 30px;
  }
  .nav-links{
    display: block;
    font-weight: bold;
    padding-right: 5px;
    padding-left: 5px;
    padding-top: 20px;
    margin: 0px;
    grid-row: 1 / span 2;
    display: inline;
    float: right;
    position: right;
  }

  .nav-links>a{
    color: dimgray;
  }
  a{
    text-decoration: none;
    font-family: Arial, sans serif;
  }
</style>