<header>
  <div class='navbar'>
    <h1>{{ shop.name }}</h1>
  <ul>
    {%-  for link in linklists.main-menu.links -%}
      <li class='nav-links'>{{ link.title | link_to: link.url }}</li>
      {%- endfor -%}
  </ul>
  </div>

</header>

<style>
  .navbar{
    position: fixed;
    top: 0;
    width: 100%; 
    background-color: white;
    display: grid;
    grid-template-columns: auto auto;
    grid-template-rows: auto auto auto;
    padding-bottom: 10px;
    padding-top: 10px;
    padding-left: 5px;
    padding-right: 5px;
    box-shadow: 5px 12px 32px dimgray;
  }
  ul{
    padding-right: 15px;
  }
  li{
    display: inline;
    float: right;
    position: right;
    
  }
  .nav-links{
    display: block;
    font-weight: bold;
    padding-right: 5px;
    padding-left: 5px;
    padding-top: 20px;
    margin: 0px;
    grid-row: 1 / span 2;
  }

  .nav-links>a{
    color: dimgray;
  }
  a{
    text-decoration: none;
    font-family: Arial, sans serif;
  }
</style>