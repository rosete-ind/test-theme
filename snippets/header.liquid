<header>
  <h1>{{ shop.name }}</h1>
  <ul>
    {%-  for link in linklists.main-menu.links -%}
      <li>{{ link.title | link_to: link.url }}</li>
      {%- endfor -%}
  </ul>
</header>

<style>

  header{
    display: grid;
    grid-template-columns: auto auto;
  }
  li{
    display: inline;
    text-decoration: none;
    float: right;
    padding: 10px;
    padding-top:5px;
    color: white;
    background-color: blue;
  }
</style>