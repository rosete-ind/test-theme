<header>
  <div class='nav-div'>
  <h1>{{ shop.name }}</h1>
  <ul>
    {%-  for link in linklists.main-menu.links -%}
      <li>{{ link.title | link_to: link.url }}</li>
      {%- endfor -%}
  </ul>
  </div>
</header>

<style>
.nav-div{
    position: fixed;
    top: 0px;
    width: 100%;
  background-color: blue;
}
  header{
    display: grid;
    grid-template-columns: auto auto;
    color: white;
  }
  li{
    display: inline;
    float: right;
    border-left: 1px solid black;
  }
  a{
    display: block;
    color: white;
    text-decoration: none;
    font-family: Arial, sans serif;
    font-weight: bold;
  }
</style>